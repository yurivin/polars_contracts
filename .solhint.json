{
    "extends": "solhint:recommended",
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": ["error", {"ignoreConstructors":true}],
        "func-visibility": ["warn",{"ignoreConstructors":true}],
        "reason-string": ["warn",{"maxLength":100}],
        "compiler-version": ["error",">=0.4.22 <0.9.0"],
        "max-states-count": ["warn",30],
        "not-rely-on-time": "off",
        "no-inline-assembly": "off",
        "payable-fallback": "off"
    }
}
